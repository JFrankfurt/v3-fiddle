{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es6",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "resolveJsonModule": true,
  },
  "include": ["**/*.ts"]
}
